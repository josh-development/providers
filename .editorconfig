root = true

[*]
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{yml,yaml}]
indent_style = space

[*.{md,rmd,mkd,mkdn,mdwn,mdown,markdown,litcoffee}]
trim_trailing_whitespace = false
