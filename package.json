{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "benchmarks"
  ],
  "scripts": {
    "clean": "rimraf .bench \"packages/**/.tests\"  \"packages/**/dist\" \"packages/**/build\" \"packages/**/.turbo\" \"packages/**/node_modules/.cache\" node_modules/.cache",
    "benchmark": "tsc -b benchmarks/src && node benchmarks/dist/benchmarks/src/index.js",
    "generate": "node scripts/generate/generate.mjs",
    "docs": "turbo run docs",
    "lint": "eslint packages scripts --ext mjs,js,ts --fix",
    "format": "prettier --write \"packages/**/{src,tests}/**/*.{mjs,js,ts}\"",
    "test:coverage": "yarn jest --coverage",
    "build": "turbo run build",
    "update": "yarn upgrade-interactive",
    "check-update": "turbo run check-update",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.4.0",
    "@favware/cliff-jumper": "^1.8.6",
    "@favware/colorette-spinner": "^1.0.0",
    "@favware/npm-deprecate": "^1.0.5",
    "@favware/rollup-type-bundler": "^1.0.10",
    "@sapphire/eslint-config": "^4.3.7",
    "@sapphire/ts-config": "^3.3.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^17.0.31",
    "@types/prompts": "^2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "colorette": "^2.0.19",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "jest-extended": "^3.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "rollup-plugin-version-injector": "^1.3.3",
    "ts-jest": "^28.0.7",
    "tslib": "^2.4.0",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/providers.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{mjs,ts}": "eslint --fix --ext mjs,ts"
  },
  "packageManager": "yarn@3.2.2"
}
