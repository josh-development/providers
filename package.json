{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf benchmarks/dist \"packages/**/dist\" \"packages/**/node_modules/.cache\"",
    "benchmark": "tsc -b benchmarks/src && node benchmarks/dist/benchmarks/src/index.js",
    "generate": "node scripts/generate/generate.mjs",
    "lint": "eslint benchmarks packages scripts --ext mjs,ts --fix",
    "format": "prettier --write \"{benchmarks,packages,scripts}/**/*.{mjs,ts}\"",
    "build": "yarn workspaces foreach -v --no-private run build",
    "update": "yarn upgrade-interactive",
    "prepublishOnly": "yarn workspaces foreach -v --no-private run prepublishOnly",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@faker-js/faker": "^7.1.0",
    "@favware/npm-deprecate": "^1.0.4",
    "@joshdb/core": "3.0.0-next.4613706cda66569b2d1dc99f06665eecec2505ce.0",
    "@joshdb/tests": "1.1.0-next.4ea097e895e79d66b62a3bf7a70736f9f2d36b91.0",
    "@sapphire/eslint-config": "^4.3.6",
    "@sapphire/ts-config": "^3.3.4",
    "@types/jest": "^28.1.1",
    "@types/node": "17.0.23",
    "@types/prompts": "^2.4.0",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "colorette": "^2.0.17",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "lint-staged": "^13.0.0",
    "ora": "^6.1.0",
    "ora-classic": "^5.4.2",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-typescript2": "^0.32.0",
    "rollup-plugin-version-injector": "^1.3.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/providers.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{mjs,ts}": "eslint --fix --ext mjs,ts"
  },
  "packageManager": "yarn@3.2.1"
}
