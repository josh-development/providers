{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "benchmark:debug": "tsc -b benchmarks/src && node --inspect benchmarks/dist/benchmarks/src/index.js",
    "benchmark": "tsc -b benchmarks/src && node benchmarks/dist/benchmarks/src/index.js",
    "generate": "node scripts/generate/generate.mjs",
    "clean": "rimraf benchmarks/dist \"packages/**/dist\" \"packages/**/node_modules/.cache\"",
    "docs": "typedoc",
    "lint": "eslint benchmarks packages scripts tests --ext mjs,ts --fix",
    "format": "prettier --write \"{benchmarks,packages,scripts,tests}/**/*.{mjs,ts}\"",
    "build": "yarn workspaces foreach -v --no-private run build",
    "update": "yarn upgrade-interactive",
    "publish": "yarn workspaces foreach -v --no-private npm publish",
    "prepublishOnly": "yarn workspaces foreach -v --no-private run prepublishOnly",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@favware/npm-deprecate": "^1.0.4",
    "@joshdb/core": "next",
    "@sapphire/eslint-config": "^4.2.1",
    "@sapphire/ts-config": "^3.3.1",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.21",
    "@types/prompts": "^2.0.14",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "colorette": "^2.0.16",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "lint-staged": "^12.3.4",
    "ora": "^6.1.0",
    "ora-classic": "^5.4.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5",
    "vite": "^2.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/providers.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{mjs,ts}": "eslint --fix --ext mjs,ts"
  },
  "packageManager": "yarn@3.2.0"
}
